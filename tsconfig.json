{
	"include": [
		"src/**/*"
	],
	"compilerOptions": {
		"target": "es2021",
		"module": "es2022",
		"inlineSourceMap": true,
		"allowJs": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"isolatedModules": true,
		"moduleResolution": "node",
		"typeRoots": [
			"node_modules/@types",
			"src/types"
		],
	}
}